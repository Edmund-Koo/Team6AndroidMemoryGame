<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4">

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="3"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/iv_1"
            android:tag="0"
            android:scaleType="fitXY"
            android:layout_weight="1"
            android:src="@drawable/cross"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/iv_2"
            android:tag="1"
            android:scaleType="fitXY"
            android:layout_weight="1"
            android:src="@drawable/cross"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/iv_3"
            android:tag="2"
            android:scaleType="fitXY"
            android:layout_weight="1"
            android:src="@drawable/cross"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="3"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_4"
            android:tag="3"
            android:scaleType="fitXY"
            android:layout_weight="1"
            android:src="@drawable/cross"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/iv_5"
            android:tag="4"
            android:scaleType="fitXY"
            android:layout_weight="1"
            android:src="@drawable/cross"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/iv_6"
            android:tag="5"
            android:scaleType="fitXY"
            android:layout_weight="1"
            android:src="@drawable/cross"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="3"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_7"
            android:tag="6"
            android:scaleType="fitXY"
            android:layout_weight="1"
            android:src="@drawable/cross"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/iv_8"
            android:tag="7"
            android:scaleType="fitXY"
            android:layout_weight="1"
            android:src="@drawable/cross"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/iv_9"
            android:tag="8"
            android:scaleType="fitXY"
            android:layout_weight="1"
            android:src="@drawable/cross"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="3"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_10"
        android:tag="9"
        android:scaleType="fitXY"
        android:layout_weight="1"
        android:src="@drawable/cross"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/iv_11"
        android:tag="10"
        android:scaleType="fitXY"
        android:layout_weight="1"
        android:src="@drawable/cross"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/iv_12"
        android:tag="11"
        android:scaleType="fitXY"
        android:layout_weight="1"
        android:src="@drawable/cross"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>